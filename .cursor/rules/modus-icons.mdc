  <div>
    <!-- Basic icon usage -->
    <ModusIcon name="save_disk" />

    <!-- Icon with custom size -->
    <ModusIcon name="download" size="lg" />

    <!-- Icon with custom color -->
    <ModusIcon name="warning" color="var(--modus-wc-color-warning)" />

